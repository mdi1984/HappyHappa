<Application
    x:Class="HappyHappa.Pi.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HappyHappa.Pi"
    RequestedTheme="Light">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="AccentColor">#312F2F</Color>
      <Color x:Key="DefaultForegroundColor">#84DCCF</Color>
      <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource AccentColor}" />
      <SolidColorBrush x:Key="DefaultTextForegroundThemeBrush" Color="{StaticResource DefaultForegroundColor}" />
      
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Converters.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

</Application>
